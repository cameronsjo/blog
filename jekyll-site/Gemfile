source "https://rubygems.org"

# Use Jekyll 4.2.x for stability
gem "jekyll", "~> 4.2.0"

# Jekyll plugins (no theme to avoid Sass issues)
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Webrick for Ruby 3+
gem "webrick", "~> 1.7"

# Required for Ruby 3.4+
gem "csv"
gem "logger"
gem "base64"
gem "bigdecimal"
gem "ostruct"
gem "psych", ">= 3.1"

# Platforms
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", "~> 1.2"
  gem "tzinfo-data"
end

gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]
