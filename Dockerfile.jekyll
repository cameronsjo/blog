# Jekyll Docker Container
FROM ruby:3.1-alpine

# Install dependencies
RUN apk add --no-cache \
    build-base \
    git \
    nodejs \
    npm

# Set working directory
WORKDIR /app

# Copy Gemfile and install gems
COPY jekyll-site/Gemfile* ./
RUN bundle install

# Expose Jekyll port
EXPOSE 4000

# Default command
CMD ["bundle", "exec", "jekyll", "serve", "--host", "0.0.0.0", "--port", "4000", "--drafts", "--livereload"]
